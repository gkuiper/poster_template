\ProvidesPackage{beamerthemeGuus} % this style was created by Guus Kuiper
%it is based on a style created by Rob J Hyndman and is an adapation of i6dv by David Vilar

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\selectcolormodel{cmyk}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage[many]{tcolorbox}

% custom colors
\definecolor{i6blue}{cmyk}{1,0.305,0,0.06}
\definecolor{i6bluedark}{rgb}{0.0156,0.2578,0.5625} 
\definecolor{i6colorscheme1}{HTML}{FF6518}  % e.g. for block title
\definecolor{i6colorblockbg}{HTML}{0033cc}
\definecolor{i6colorblockfg}{HTML}{FCE94F}
\definecolor{i6colorscheme2}{HTML}{000000}  % e.g. title in headline
\definecolor{i6colorscheme3}{HTML}{C3DFFF}  % e.g. for poster background
\definecolor{i6colorscheme4}{HTML}{000000} 
\definecolor{i6colorschemeHeadline}{HTML}{0033cc}  % for headline bg
\definecolor{i6colorschemeFootline}{HTML}{6699FF}


% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=i6colorschemeHeadline}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=lightgray}
\setbeamercolor{institute in headline}{fg=lightgray}
\setbeamercolor{logo in headline}{fg=black,bg=lightgray}
\setbeamercolor{separation line}{bg=i6colorscheme1}
\setbeamercolor{footline}{fg=white,bg=i6colorschemeHeadline!50}
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}% body colors and fonts
\setbeamercolor*{block body}{bg=white,fg=black}% block environment
\setbeamercolor*{block title}{fg=white,bg=i6colorblockbg}
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamercolor{alerted text}{fg=i6colorscheme1}
\setbeamercolor*{background canvas}{bg=i6colorscheme3}% background color

\setbeamerfont{footline}{size=\normalsize}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamerfont{example title}{size=\large,series=\bf}

\setbeamertemplate{itemize items}[ball]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%bibliography
\setbeamertemplate{bibliography item}{[\theenumiv]} %numbered entries

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\tcbset{raster equal height=rows, raster rows=3, raster columns=3, raster equal skip=2ex,
raster every box/.style={coltitle=white, colframe=i6colorblockbg, fonttitle=\bf, colbacktitle=i6colorschemeHeadline, colframe=i6colorscheme1, left=1.5ex, right=1.5ex, top=1.5ex, bottom=1.5ex, lefttitle=2.5ex, toptitle=.75ex, bottomtitle=.75ex, righttitle=1.5ex, fuzzy shadow={.75ex}{-1ex}{0ex}{0.1ex}{black!50!white}, enhanced jigsaw, opacityback=0.85, boxrule=0ex, titlerule=0.4ex, arc=1ex, center title}}

\tcbsetforeverylayer{segmentation style={dash pattern=on 1ex off 1ex, line width=.2ex}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{tcolorbox}[toprule=0ex, leftrule=0ex, rightrule=0ex, bottomrule=0.6ex, nobeforeafter, arc=0ex, colframe=i6colorscheme1, colback=i6colorschemeHeadline, width=\paperwidth]
    \vskip.5cm
	\begin{columns}
	\begin{column}[c]{0.08\textwidth}
		\centering
		\insertphoto
		\vspace{0.5cm}
		\vskip1.5cm
	\end{column}
	\begin{column}[c]{0.91\textwidth}
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[0.5ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
		\vskip1cm
	\end{column}
	\end{columns}
  \end{tcolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{tcolorbox}[toprule=0.6ex, leftrule=0ex, rightrule=0ex, bottomrule=0ex, nobeforeafter, arc=0ex, colframe=i6colorscheme1, colback=i6colorschemeHeadline!50, width=\paperwidth, boxsep=0.5ex]
    \hfill 
    \insertfooter
  \end{tcolorbox}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<all>

\def\footer#1{\def\insertfooter{#1}}
\def\photo#1{\def\insertphoto{#1}}
